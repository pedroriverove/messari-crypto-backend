    "eslint-config-prettier": "^8.6.0",
    "nodemon": "^2.0.20",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "@types/cors": "^2.8.13",
    "axios": "^1.3.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "eslint": "^8.33.0",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
